<Window x:Class="notatnik_.kolor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notatnik_"
        mc:Ignorable="d"
        Title="kolor" Height="135" Width="127">
    <StackPanel>
        <UniformGrid Columns="2">
            <Label>R</Label>
            <TextBox x:Name="wejscieR"></TextBox>
            <Label>G</Label>
            <TextBox x:Name="wejscieG"></TextBox>
            <Label>B</Label>
            <TextBox x:Name="wejscieB"></TextBox>
        </UniformGrid>
        <Button Click="zatwierdzenie">zatwierdz</Button>
    </StackPanel>
</Window>
